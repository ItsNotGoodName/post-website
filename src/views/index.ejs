<!doctype html>
<html lang="en">

<head>
  <% include ./partials/head %>
  <title>Home Page</title>
</head>

<body>
  <% include ./partials/nav %>

  <div class="row">
    <% for(var i=0; i<posts.length; i++ ) { %>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body p-100">
          <h4 class="card-title">
            <%= posts[i].title %>
          </h4>
          <span>
            <%= posts[i].date.toLocaleDateString("en-US") %>
          </span>
          <p class="card-text">
            <%= posts[i].body %>
          </p>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <% include ./partials/footer %>
</body>

</html>