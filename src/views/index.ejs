<div class="row">
  <% for(var i=0; i<posts.length; i++ ) { %>
  <div class="col-lg-3 col-md-4 col-sm-5 mb-3">
    <div class="card h-100">
      <div class="card-body">
        <h4 class="card-title">
          <%= posts[i].title %>
        </h4>
        <p class="card-text">
          <%= posts[i].body %>
        </p>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col">

            <div class="row">
              <form action="/post/vote" method="POST">
                <input hidden name="id" value="<%= posts[i]._id %>"></input>
                <button name="vote" value="upvote" type="submit">U</button>
              </form>

              <small class="text-muted">
                <%= posts[i].vote %>
              </small>

              <form action="/post/vote" method="POST">
                <input hidden name="id" value="<%= posts[i]._id %>"></input>
                <button name="vote" value="downvote" type="submit">D</button>
              </form>
            </div>

          </div>
          <div class="col">

            <small class="text-muted">
              <%= posts[i].date.toLocaleDateString("en-US") %>
            </small>

          </div>
          <div class="col text-right">

            <small class="text-muted">
              <%= posts[i].postedBy.username %>
            </small>

          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>