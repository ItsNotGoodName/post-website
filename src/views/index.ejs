<div class="container-fluid">
  <div class="row">
    <% for(var i=0; i<posts.length; i++ ) { %>
    <div class="col-sm-6 col-md-6 col-lg-6 mb-3">
      <div id="<%= posts[i]._id %>" class="card h-100">
        <div class="card-body">
          <h4 class="card-title">
            <%= posts[i].title %>
          </h4>
          <p class="card-text">
            <%= posts[i].body %>
          </p>
        </div>
        <div class="card-footer" style="font-size: 18px">
          <div class="row">
            <div class="col">

              <div class="row">
                <form action="/post/vote" method="POST">
                  <input hidden name="id" value="<%= posts[i]._id %>"></input>
                  <button name="vote" value="upvote" type="submit">
                    <img width="20px" height="30px" src="/svg/uparrow.svg">
                  </button>
                </form>

                <small class="text-muted">
                  <%= posts[i].vote %>
                </small>

                <form action="/post/vote" method="POST">
                  <input hidden name="id" value="<%= posts[i]._id %>"></input>
                  <button name="vote" value="downvote" type="submit">
                    <img width="20px" height="30px" src="/svg/downarrow.svg">
                  </button>
                </form>
              </div>

            </div>
            <div class="col">

              <small class="text-muted">
                <%= posts[i].date.toLocaleDateString("en-US") %>
              </small>

            </div>
            <div class="col text-right">

              <small class="text-muted">
                <%= posts[i].postedBy.username %>
              </small>

            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>